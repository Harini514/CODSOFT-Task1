import math

def display_menu():
    print("\n--- Advanced Calculator ---")
    print("1. Addition (+)")
    print("2. Subtraction (-)")
    print("3. Multiplication (*)")
    print("4. Division (/)")
    print("5. Exponentiation (^)")
    print("6. Modular Arithmetic (%)")
    print("7. Square Root (âˆš)")
    print("8. Quit")

def perform_calculation(choice):
    if choice in ['1', '2', '3', '4', '5', '6']:
        try:
            num1 = float(input("Enter the first number: "))
            num2 = float(input("Enter the second number: "))
            
            if choice == '1':  # Addition
                result = num1 + num2
                operation = '+'
            elif choice == '2':  # Subtraction
                result = num1 - num2
                operation = '-'
            elif choice == '3':  # Multiplication
                result = num1 * num2
                operation = '*'
            elif choice == '4':  # Division
                if num2 == 0:
                    print("Error: Division by zero is not allowed.")
                    return
                result = num1 / num2
                operation = '/'
            elif choice == '5':  # Exponentiation
                result = num1 ** num2
                operation = '^'
            elif choice == '6':  # Modular Arithmetic
                if num2 == 0:
                    print("Error: Division by zero in modular arithmetic is not allowed.")
                    return
                result = num1 % num2
                operation = '%'
            
            print(f"The result of {num1} {operation} {num2} is: {result}")
        
        except ValueError:
            print("Invalid input. Please enter numeric values.")

    elif choice == '7':  # Square Root
        try:
            num = float(input("Enter the number to find the square root: "))
            if num < 0:
                print("Error: Cannot calculate the square root of a negative number.")
                return
            result = math.sqrt(num)
            print(f"The square root of {num} is: {result}")
        except ValueError:
            print("Invalid input. Please enter a numeric value.")
    else:
        print("Invalid choice! Please select a valid operation.")

def calculator():
    while True:
        display_menu()
        choice = input("Enter the number corresponding to your choice: ")
        if choice == '8':  # Quit
            print("Thank you for using the Advanced Calculator. Goodbye!")
            break
        perform_calculation(choice)

# Run the calculator
calculator()
